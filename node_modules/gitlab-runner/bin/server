#!/usr/bin/env node

const argv = require('yargs')
  .usage('Usage: $0 [-p <port>]')
  .alias('p', 'port')
    .nargs('p', 1)
    .describe('p', 'Port to use')
    .defaults('p', 8080)
  .alias('h', 'help')
    .help('h')
  .example('$0')
  .example('$0 -p 1234')
  .argv

const Server = require('../src/Server')

new Server(argv.port).start()
